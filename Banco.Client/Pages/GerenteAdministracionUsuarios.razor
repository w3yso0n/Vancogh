@page "/GerenteAdministracionUsuarios"

<!DOCTYPE html>
<html>
<head>
	<title>Administración de Usuarios de Gerente</title>
	<style>
		/* Estilos para la tabla de usuarios */
		table {
			border-collapse: collapse;
			width: 100%;
		}

		th, td {
			text-align: left;
			padding: 8px;
		}

		tr:nth-child(even){background-color: #f2f2f2}

		th {
			background-color: #4CAF50;
			color: white;
		}

		/* Estilos para el formulario de generación de días de vacaciones */
		form {
			margin-top: 20px;
			display: flex;
			flex-direction: column;
			align-items: center;
			width: 100%;
		}

		input[type="submit"] {
			margin-top: 10px;
			padding: 8px 16px;
			background-color: #4CAF50;
			color: white;
			border: none;
			border-radius: 4px;
			cursor: pointer;
		}
	</style>
</head>
<body>
	<h1>Administración de Usuarios de Gerente</h1>
	
	<h2>Usuarios</h2>
	<table>
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Apellido</th>
				<th>Email</th>
				<th>Días de Vacaciones</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			<!-- Aquí se podrían generar dinámicamente las filas de la tabla con los usuarios -->
			<tr>
				<td>John</td>
				<td>Doe</td>
				<td>john.doe@example.com</td>
				<td>14</td>
				<td><button>Aceptar Préstamos</button></td>
			</tr>
			<tr>
				<td>Jane</td>
				<td>Doe</td>
				<td>jane.doe@example.com</td>
				<td>10</td>
				<td><button>Aceptar Préstamos</button></td>
			</tr>
		</tbody>
	</table>

	<h2>Generar Días de Vacaciones</h2>
	<form>
		<label for="usuario">Usuario:</label>
		<select id="usuario" name="usuario">
			<!-- Aquí se podrían generar dinámicamente las opciones del select con los usuarios -->
			<option value="john.doe@example.com">John Doe</option>
			<option value="jane.doe@example.com">Jane Doe</option>
		</select>

		<label for="meses-trabajados">Meses Trabajados:</label>
		<input type="number" id="meses-trabajados" name="meses-trabajados" min="1" required>

		<input type="submit" value="Generar Días de Vacaciones">
	</form>
</body>
</html>
